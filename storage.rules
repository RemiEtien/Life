rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // File size validation helpers
    function isValidImageSize() {
      return request.resource.size <= 10 * 1024 * 1024; // 10 MB
    }

    function isValidVideoSize() {
      return request.resource.size <= 100 * 1024 * 1024; // 100 MB
    }

    function isValidAudioSize() {
      return request.resource.size <= 25 * 1024 * 1024; // 25 MB
    }

    // Check file type based on content type
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }

    function isAudio() {
      return request.resource.contentType.matches('audio/.*');
    }

    // Validate file size based on type
    function isValidFileSize() {
      return (isImage() && isValidImageSize()) ||
             (isVideo() && isValidVideoSize()) ||
             (isAudio() && isValidAudioSize());
    }

    // ========================================
    // AUDIO ASSETS (On-Demand Loading)
    // ========================================

    // Audio assets for ambient sounds and background music
    // Only authenticated users can download, only admins can upload
    match /audio_assets/{allPaths=**} {
      allow read: if isAuthenticated();  // Require authentication
      allow write: if false;  // Only upload via Firebase Console/Admin SDK
    }

    // ========================================
    // USER FILES
    // ========================================

    // All files under users/{userId}/**
    // Includes: avatars, memory media (images, videos, audio), thumbnails, exports, temp files
    match /users/{userId}/{allPaths=**} {
      // Owner can read and delete their own files without restrictions
      allow read, delete: if isOwner(userId);

      // Write operations require valid file size based on content type
      // Images: max 10MB, Videos: max 100MB, Audio: max 25MB
      allow write: if isOwner(userId) && isValidFileSize();
    }

    // ========================================
    // FALLBACK RULE - DENY ALL
    // ========================================

    // Explicitly deny access to any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
